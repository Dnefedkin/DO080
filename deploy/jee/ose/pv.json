{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "mysqldb-volume",
        "labels": {
            "application": "todo"
        }
    },
    "spec": {
        "capacity": {
            "storage": "1Gi"
        },
        "accessModes": [ "ReadWriteOnce" ],
        "nfs": {
            "path": "/var/export/dbvol",
            "server": "master.pod0.example.com"
        }
    } 
}

